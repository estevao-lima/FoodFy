  {% endblock%}

  {% block content %}

    <main>

      <section class="recipes">

        <div class="cards">

          {% for item in items %}

            <div class="card" id="{{item.id}}">
              <img src="/assets/{{item.id}}.png" alt="Imagem de {{item.title}}">
              <h4>{{item.title}}</h4>
              <p>{{item.author}}</p>
            </div>

          {% endfor %}

          {% for item in items %}

            <div class="card" id="{{item.id}}">
